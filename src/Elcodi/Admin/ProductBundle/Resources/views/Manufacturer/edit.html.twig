{% extends 'AdminCoreBundle::layout.html.twig' %}


{% block breadcrumb %}

    {% set entityHeader = manufacturer.id
        ? 'Edit ' ~ manufacturer.name
        : 'Create new Manufacturer'
    %}

    {% include "@AdminCore/Common/breadcrumb.html.twig" with {
        breadcrumb: {
            "Manufacturers": {
                "url": url('admin_manufacturer_list')
            },
            (entityHeader ): {
                "active" : true
            }
        }
    } %}

{% endblock breadcrumb %}

{% block content %}

    {% if manufacturer.id %}
        {{ render(url("admin_manufacturer_edit_component", {
            'id': manufacturer.id
        })) }}
    {% else %}
        {{ render(url("admin_manufacturer_new_component")) }}
    {% endif %}

{% endblock content %}
