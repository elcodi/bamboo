<![endif]-->
{% block body %}{% endblock body %}
{% block pixels %}{% endblock %}
{% block view_pixel %}
    <script>
        _etc.push(["{{ store.tracker }}", 'page_view']);
    </script>
{% endblock view_pixel %}
{% block foot_script %}{% endblock foot_script %}

{{ elcodi_hook("store.body_bottom") }}
</body>
</html>
